@model EquipmentRequestModel;
@{
    ViewData["Title"] = "Request Form";
}



<div class="text-center">
    <h1 class="display-4">Request Form</h1>
</div>

<div class="row">

    <div class="col-4"></div>

    <form asp-action="SaveResponse" method="post" class="col-4">

        <div class="form-group pt-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Your Name">
        </div>

        <div class="form-group pt-3">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="Your Number">
        </div>

        <div class="form-group pt-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Your Email">
        </div>

        <div class="form-group pt-3">
            <label asp-for="RoleType">What is your role?</label>
            <select asp-for="RoleType" asp-items="Html.GetEnumSelectList<RoleType>()">
                <option selected="selected" value="">Please select your role</option>
            </select>
        </div>

        <div class="form-group pt-3">
            <label asp-for="EquipmentType">What equipment are you taking out?</label>
            <select asp-for="EquipmentType" asp-items="Html.GetEnumSelectList<EquipmentType>()">
                <option selected="selected" value="">Please select the equipment</option>
            </select>
        </div>

        <div class="form-group pt-3">
            <label asp-for="Details"></label>
            <input asp-for="Details" class="form-control" placeholder="Enter Details...">
        </div>

        <div class="form-group pt-3">
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" placeholder="How Many Days?">
        </div>

        <div asp-validation-summary="All" class="pt-3"></div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>

</div>